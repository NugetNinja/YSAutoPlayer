<Window x:Class="YSAutoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YSAutoPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance Type=local:MainWindow}">
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:MainWindow}}">
        <DockPanel>
            <Button DockPanel.Dock="Right" Click="Button_Click">Load YSAP</Button>
            <TextBox Text="{Binding MusicScoreFile,Mode=OneWay}"></TextBox>
        </DockPanel>
        <StackPanel>
            <TextBlock Text="{Binding MusicScoreTitle,Mode=OneWay}" />
            <TextBlock Text="{Binding MusicScoreBeat,Mode=OneWay}" />
            <TextBlock Text="{Binding MusicScoreTracksCount,Mode=OneWay}" />
        </StackPanel>
    </StackPanel>
</Window>
